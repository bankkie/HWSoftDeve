<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bankkie.myapplication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/drawable_shap"
            android:fontFamily="casual"
            android:text="Premier League"
            android:textColor="#008e76"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/bts"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text1"
            android:layout_marginTop="18dp"
            android:src="@drawable/bts" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bts"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football club?"
                android:textColor="#00b0ff"
                android:textSize="20sp"
                android:fontFamily="casual"/>

            <CheckBox
                android:id="@+id/checkbox_Burnley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Burnley" />

            <CheckBox
                android:id="@+id/checkbox_Everton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Everton" />

            <CheckBox
                android:id="@+id/checkbox_LeicesterCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Leicester City" />

            <CheckBox
                android:id="@+id/checkbox_CrystalPalace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="Crystal Palace" />

            <CheckBox
                android:id="@+id/checkbox_WestBromwichAlbion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:text="West Bromwich Albion" />





            <ImageView
                android:id="@+id/btss"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text1"
                android:layout_marginTop="18dp"
                android:src="@drawable/jk"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Player?"
                android:textColor="#00b0ff"
                android:textSize="20sp"
                android:fontFamily="casual"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_MohamedSalah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Mohamed Salah" />

                <RadioButton
                    android:id="@+id/radio_GabrielJesus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Gabriel Jesus" />

                <RadioButton
                    android:id="@+id/radio_Willian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Willian" />

                <RadioButton
                    android:id="@+id/radio_MesutÖzil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Mesut Özil" />

                <RadioButton
                    android:id="@+id/radio_DeleAlli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Dele Alli" />

            </RadioGroup>
            <ImageView
                android:id="@+id/btss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text1"
                android:layout_marginTop="18dp"
                android:src="@drawable/rm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Manager?"
                android:textColor="#00b0ff"
                android:textSize="20sp"
                android:fontFamily="casual"/>



            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_DavidMoyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="David Moyes" />

                <RadioButton
                    android:id="@+id/radio_AntonioConte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Antonio Conte" />

                <RadioButton
                    android:id="@+id/radio_RafaelBenítez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Rafael Benítez" />

                <RadioButton
                    android:id="@+id/radio_SamAllardyce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Sam Allardyce" />

                <RadioButton
                    android:id="@+id/radio_JosepGuardiola"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:text="Josep Guardiola" />

            </RadioGroup>

            <Button
                android:id="@+id/btn1"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:background="@drawable/drawable_shap"
                android:text="Thankyou" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>
